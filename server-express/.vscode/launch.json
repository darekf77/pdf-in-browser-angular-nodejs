{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/dist/run.js"
        },
        {
            "type": "node",
            "request": "launch",
            "remoteRoot": "${workspaceRoot}/dist",
            "name": "Nodemon server",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/dist/run.js",
            "restart": true,
            "sourceMaps": true,
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen"
        },
    ]
}